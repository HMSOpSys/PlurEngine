{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@engine": ["src/engine"],
      "@engine/*": ["src/engine/*"],
      "@gameTypes": ["src/gameTypes"],
      "@gameTypes/*": ["src/gameTypes/*"],
      "@mocks/*": ["__mocks__/*"],
    }
  },
  "include": ["src/**/*", "__mocks__/**/*"],
  "exclude": [
    "node_modules",
    "build",
  ]
}